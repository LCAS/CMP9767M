<?xml version="1.0"?>
<launch>
  <arg name="tmap_file" default="$(find uol_cmp9767m_tutorial)/maps/test.tmap2" />

  <arg name="machine" default="localhost" />
  <arg name="user" default="" />

  <arg name="map_file" default="$(find uol_cmp9767m_base)maps/cropped.yaml"/>

  <machine name="$(arg machine)" address="$(arg machine)" env-loader="$(optenv ROS_ENV_LOADER )" user="$(arg user)" default="true"/>

  <node pkg="topological_navigation" type="map_manager2.py" name="topological_map_manager2" args="$(arg tmap_file)" respawn="true"/>

  <node pkg="topological_navigation" type="visualise_map.py" name="visualise_map" args="-e" respawn="true"/>

  <!-- metric map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>


</launch>
